<Application xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            x:Class="RestaurantApp.App">
    <Application.Styles>
        <StyleInclude Source="/avares://Avalonia.Themes.Default/DefaultTheme.axaml"/>
        <StyleInclude Source="/avares://Avalonia.Themes.Default/AccentBaseTheme.Light.axaml"/>
    </Application.Styles>
</Application>

<TabControl>
    <TabItem Header="Заказы">
        <ListView Items="{Binding Orders}" />
    </TabItem>
    <TabItem Header="Сотрудники">
        <ListView Items="{Binding Employees}" />
    </TabItem>
    <TabItem Header="Отчеты">
        <Button Content="Генерация отчета" Click="GenerateReport_Click" />
    </TabItem>
</TabControl>